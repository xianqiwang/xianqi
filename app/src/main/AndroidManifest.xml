      <!--  <activity android:name=".UpdateDialog" android:launchMode="singleInstance"/>-->

        <activity android:name=".CheckDeltaProgressDialog" android:launchMode="singleInstance"/>
        <activity android:name=".UpdateSchedule" android:launchMode="singleInstance"/>
        <service android:name=".DebugService" android:launchMode="singleInstance"/>
        <activity android:name=".DownloadProgress"
            android:screenOrientation="nosensor"
            android:allowTaskReparenting = "true"/>

        <receiver android:name=".DebugReceiver"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.android.nfp.updateDebug" />
            </intent-filter>
        </receiver>

        <receiver android:name=".AlarmReceiver"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.nfp.update.ALARM" />
                <action android:name="com.nfp.update.SCHEDULE" />
                <action android:name="com.nfp.update.UPDATE" />
            </intent-filter>
        </receiver>

        <service android:name=".AutoUpdateService">
        </service>

        <service android:name="com.nfp.update.polling.PollingService">
        </service>

        <receiver android:name="com.nfp.update.polling.PollReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.action.NITZ" />
                <action android:name="android.intent.action.RETRY" />
                <action android:name="com.sim.AboveOneHour" />
                <action android:name="software.update.cleardata" />
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.nfp.update.TimeChangeReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.TIME_SET" />
            </intent-filter>
        </receiver>
<!--        <uses-library android:name="com.nextfp.android.util"/>
        <uses-library android:name="com.nextfp.android.app" />-->
    </application>
</manifest>