            <intent-filter>
                <action android:name="com.qualcomm.update.REBOOT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.qualcomm.update.REBOOT_DELTA" />
